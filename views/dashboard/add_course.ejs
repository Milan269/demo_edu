<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="../assets/bs/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"  />
        <link rel="stylesheet" href="../assets/css/main.css">
        <title>StudyAge</title>
</head>
<body>
    <div class="container-fluid ">

    
    <div class="row ">
    <!-- header -->
   <%- include('./header.ejs') %>
    <!-- header ends -->

    

        <div class="col-2 p-0">
<!-- left menu -->
<%- include('./left.ejs') %>
<!-- left menuends -->

        </div>

        <div id="chng" class="col-10 p-5 display-5  text-center">
         
            <form class=" row justify-content-center fs-5 fw-medium text-start g-3" method="post" action="/update" enctype="multipart/form-data">
             <div class="display-5 my-2 text-center">Add New Course</div>
            
            <div class="col-6">
                Course name
                <input type="text" placeholder="Enter Course name" class="form-control" name="course_name" required>

            </div>
            <div class="col-6">
                Course Duration
                <input type="text" placeholder="Enter Course Duration" class="form-control" name="course_duration" required>

            </div>
            <div class="col-12">Course Description
                <textarea name="course_desc" class= "form-control" id="msg" placeholder="Course description here..."  rows="3"  required>

                </textarea>
            </div>
            

            <div class="col-12">
                Course Image
                <input type="file" class="form-control" name="course_img">

            </div>
            <div class="col-12 text-center">
                 <button type="submit" class="btn btn-primary">
                    submit
                 </button>
            </div>
            </form>
        </div>

        </div>

    </div>

    

<script>
   

   function add(){
    var a=document.createElement('iframe');
   
   a.src='/degree_ug'
   a.setAttribute("style","height:500px;width:100%;")
   document.getElementById("chng").innerHTML="UG Courses"

 document.getElementById("chng").appendChild(a);
  
   }
   
</script>
</body>
</html>